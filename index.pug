extends layout

block content
  
  include assets/maps/basic.pug

  div.main(style="width: 100%; height:100%; overflow:hidden;")
    
    img#diamond.preload(src="assets/images/diamond.gif")
    img#items.preload(src="assets/images/items.gif")
    img#logo.preload(src="assets/images/logo.gif")
    img#playersprites.preload(src="assets/images/playersprites.gif")
    img#sparkle.preload(src="assets/images/sparkle.gif")
    img#testtileset.preload(src="assets/images/testtileset.gif")

    audio#bgmusic.preload(src="assets/sounds/bgmusic.wav")
    audio#collect.preload(src="assets/sounds/collect.wav")
    audio#splash.preload(src="assets/sounds/splash.wav")
    audio#mapmove.preload(src="assets/sounds/mapmove.wav")
    audio#menuoption.preload(src="assets/sounds/menuoption.wav")  
    audio#finish.preload(src="assets/sounds/finish.wav")
    audio#chop.preload(src="assets/sounds/chop.wav")
  
    canvas#canvas(width="384" height="384" style="background-color:#fff")
    div#controls(class="" style="display:none; position:absolute; left:8px; right:8px; bottom:10px; top:395px; background:rgb(166,226,107)")
      p.controls &nbsp;Score:&nbsp;100
      div(style="position:absolute; right:168px; width:32px; height:32px; top:6px; border: 2px solid green;")
        img.diamond1(style="position:absolute; width:24px; height:24px; left:4px; top:4px; background:rgb(166,226,107);")
      div(style="position:absolute; right:126px; width:32px; height:32px; top:6px; border: 2px solid green;")
        img.diamond2(style="position:absolute; width:24px; height:24px; left:4px; top:4px; background:rgb(166,226,107);")
      div(style="position:absolute; right:84px; width:32px; height:32px; top:6px; border: 2px solid green;")
        img.diamond3(style="position:absolute; width:24px; height:24px; left:4px; top:4px; background:rgb(166,226,107);")
      div(style="position:absolute; right:42px; width:32px; height:32px; top:6px; border: 2px solid green;")
        img.key(style="position:absolute; width:24px; height:24px; left:4px; top:4px; background:rgb(166,226,107);")
      div(style="position:absolute; right:4px; width:32px; height:32px; top:6px; border: 2px solid green;")
        img.axe(style="position:absolute; width:24px; height:24px; left:4px; top:4px; background:rgb(166,226,107);")

  include assets/views/result.pug

  script(src="node_modules/jquery/dist/jquery.min.js")
  script(src="assets/javascripts/util/fileutil.js")
  script(src="assets/javascripts/map/tile.js")
  script(src="assets/javascripts/main/main.js")